pipeline {
    agent any 
    stages {
        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }
        stage('Display Environment') {
            steps {
                sh '''
                    env | sort
                    pwd
                '''
            }
        }
        stage('OpenSuSE Leap') {
            agent {
                docker { image 'opensuse/leap:latest' }
            }
            steps {
                sh '''
                    pwd
                    cat /etc/os-release
                '''
            }

        }
    }
}